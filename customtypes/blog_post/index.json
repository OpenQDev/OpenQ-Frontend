{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "socialimage": { "type": "Image", "config": { "label": "SocialImage", "constraint": {}, "thumbnails": [] } },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "header": { "type": "SharedSlice" },
            "blog_body": { "type": "SharedSlice" },
            "sub_header": { "type": "SharedSlice" },
            "blog_image": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
        "type": "Text"
      },
      "meta_image": {
        "config": { "constraint": { "height": 1260, "width": 2400 }, "label": "Meta Image", "thumbnails": [] },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
